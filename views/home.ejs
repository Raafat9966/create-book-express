<!DOCTYPE html>
<html lang="en">
	<%- include('./partials/head.ejs') %>
	<body>
		<%- include('./partials/header.ejs', {page: "home"}) %>
		<div class="container book-form">
			<form action="/user/login" method="POST">
				<h2>Login</h2>
				<div class="mb-3">
					<label for="name" class="form-label">name</label>
					<input
						type="text"
						class="form-control"
						id="name"
						name="name"
						placeholder="Enter the name here..."
					/>
				</div>
				<div class="mb-3">
					<label for="password" class="form-label">password</label>
					<input
						type="password"
						class="form-control"
						id="password"
						name="password"
						placeholder="Enter the password here..."
					/>
				</div>
				<div class="mb-3">
					<button type="submit" class="btn btn-primary">Login</button>
					<% if(locals.message && message.user){ %>
					<div
						class="alert alert-danger alert-dismissible fade show p-2 mt-2"
						role="alert"
					>
						<p class="m-0"><%=message.user%></p>
						<button
							type="button"
							class="btn-close btn-sm p-2 m-1"
							data-bs-dismiss="alert"
							aria-label="Close"
						></button>
					</div>
					<% } else if(locals.message && message.newUser){ %>
					<div
						class="alert alert-success alert-dismissible fade show p-2 mt-2"
						role="alert"
					>
						<p class="m-0"><%=message.newUser%></p>
						<button
							type="button"
							class="btn-close btn-sm p-2 m-1"
							data-bs-dismiss="alert"
							aria-label="Close"
						></button>
					</div>
					<% } %>
				</div>
			</form>
		</div>
		<script>
			if (window.history.replaceState) {
				window.history.replaceState(null, null, window.location.href);
			}
		</script>
	</body>
</html>
